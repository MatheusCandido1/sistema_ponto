  <div class="container-fluid">
  <%= yield %>
      </div>
      </div>
</div>
<script>
    $("#menu-toggle").click(function(e) {
      e.preventDefault();
      $("#wrapper").toggleClass("toggled");
    });
  </script>
  </body>
</html>
