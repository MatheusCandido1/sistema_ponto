<h2>Atualizar dados</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :name, label: 'Nome Completo',
    required: true,
    autofocus: true %>
<%= f.input :phone, label: 'Telefone',
    required: true,
    autofocus: true %>    
<%= f.input :cpf, label: 'CPF',
    required: true,
    autofocus: true %>    
<%= f.input :birth_date, html5: true, as: :date, label: 'Data de nascimento',
    required: true,
    autofocus: true %>  
<%= f.input :address, label: 'Endereço',
    required: true,
    autofocus: true %>        

    <%= f.input :password,
                hint: "Deixe em branco se você não pretende mudar",
                required: false,
                label: 'Nova senha',
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                hint: "Deixe em branco se você não pretende mudar",
                required: false,
                label: 'Confirmar nova senha',
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :current_password,
                hint: "Você precisa digitar sua senha atual para atualizar",
                required: true,
                label: 'Senha atual',
                input_html: { autocomplete: "current-password" } %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, "Atualizar dados", class: "btn btn-success" %>
  </div>
<% end %>
<br>

<h3>Cancelar minha conta</h3>

<p>Insatisfeito? <%= link_to "Quero excluir minha conta", registration_path(resource_name), data: { confirm: "Tem certeza que desejar cancelar sua conta?" }, method: :delete, class: "btn btn-danger" %></p>

<%= link_to "Voltar", :back %>
