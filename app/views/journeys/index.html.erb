<p id="notice"><%= notice %></p>

<h1>Journeys</h1>

<table>
  <thead>
    <tr>
      <th>Start journey</th>
      <th>End journey</th>
      <th>Worked hours</th>
      <th>Lunch start</th>
      <th>Lunch end</th>
      <th>Lunch time</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @journeys.each do |journey| %>
      <tr>
        <td><%= journey.start_journey %></td>
        <td><%= journey.end_journey %></td>
        <td><%= journey.worked_hours %></td>
        <td><%= journey.lunch_start %></td>
        <td><%= journey.lunch_end %></td>
        <td><%= journey.lunch_time %></td>
        <td><%= journey.user %></td>
        <td><%= link_to 'Show', journey %></td>
        <td><%= link_to 'Edit', edit_journey_path(journey) %></td>
        <td><%= link_to 'Destroy', journey, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

