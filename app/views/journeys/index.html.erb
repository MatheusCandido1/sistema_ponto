<h1>Jornada</h1>

<div class="text-right">
<%= link_to 'Iniciar Jornada',  new_journey_path, :class => "btn btn-primary" %>
</div>
<br>
    <div class="table-responsive"> 
<table class="table">
  <thead>
    <tr>
    <th style="text-align: center">Data:</th>
      <th style="text-align: center">Horário de Chegada:</th>
      <th style="text-align: center">Inicío do Almoço:</th>
      <th style="text-align: center">Término do Almoço:</th>
      <th style="text-align: center">Horário de Saída:</th>
      <th style="text-align: center" >Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @journeys.each do |journey| %>
      <tr>
      <td style="text-align: center"><%= journey.start_journey.strftime("%d/%m/%Y") %></td>
      <td style="text-align: center"><%= journey.start_journey.to_s(:time) %></td>
      <td style="text-align: center"><%= journey.lunch_start.to_s(:time) unless journey.lunch_start.to_s.strip.empty? %></td>
      <td style="text-align: center"><%= journey.lunch_end.to_s(:time) unless journey.lunch_end.to_s.strip.empty? %></td>
      <td style="text-align: center"><%= journey.end_journey.to_s(:time) unless journey.end_journey.to_s.strip.empty? %></td>
      <td>
      <% if journey.start_journey.past? %>
      <a style="color:white" class="btn btn-info">Ver Jornada</a>
        <% else %>
        <%= link_to  edit_journey_path(journey), :class => "btn btn-success"  do %>
          <i class="fa fa-pencil"></i> Atualizar
          <% end %>
        <% end %>
      </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>